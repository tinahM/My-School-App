<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceDetails">

    <include layout="@layout/attendacedetailstoolbar"/>

    <LinearLayout
        android:id="@+id/layoutname"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHILOSOPHY: MS. SYLVIA"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutdetails"
        android:background="@drawable/buttons"
        android:layout_below="@id/layoutname"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutdetails1"
        android:background="@drawable/buttons"
        android:layout_below="@id/layoutdetails"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From | To:"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/buttons"
        android:id="@+id/layoutdetails2"
        android:layout_below="@id/layoutdetails1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Totalhours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Hours:"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/buttons"
        android:id="@+id/layoutdetails3"
        android:layout_below="@id/layoutdetails2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: present /absent"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>