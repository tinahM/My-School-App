<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradientbackground">


        <TextView
        android:id="@+id/MySchoolApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40sp"
        android:text="@string/my_school_app"
        android:textSize="20sp"
        android:textStyle="bold"
            android:gravity="center_horizontal" />
    <LinearLayout
        android:id="@+id/simple"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:src="@drawable/logo" />
    </LinearLayout>
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simple"
        android:layout_marginTop="5sp" >
    <Button
        android:id="@+id/Profile"
        android:drawableTop="@drawable/ic_person_black_24dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/MySchoolApp"
        android:background="@drawable/buttons"
        android:text="@string/profile" />

        <Button
            android:id="@+id/Fees"
            android:drawableTop="@drawable/ic_credit_card_black_24dp"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:background="@drawable/buttons"
            android:text="@string/fees" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow1"
        android:layout_marginTop="10sp" >

    <Button
        android:id="@+id/Attendance"
        android:drawableTop="@drawable/ic_assignment_ind_black_24dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/buttons"
        android:text="@string/attendance" />

    <Button
        android:id="@+id/Coursework"
        android:drawableTop="@drawable/ic_school_black_24dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginLeft="50dp"
        android:background="@drawable/buttons"
        android:text="COURSEWORK" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow2"
        android:layout_marginTop="10sp" >
        <Button
            android:id="@+id/TimeTable"
            android:drawableTop="@drawable/ic_access_time_black_24dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/buttons"
            android:text="@string/timetable" />

        <Button
            android:id="@+id/Logout"
            android:drawableTop="@drawable/ic_exit_to_app_black_24dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:background="@drawable/buttons"
            android:text="@string/logout" />

    </TableRow>

</RelativeLayout>